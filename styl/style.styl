// Palette is adrift in dream

$blue = #0B486B
$sail = #3B8686
$sea = #79BD9A
$foaming = #A8DBA8
$sunlit = #CFF09E

html, body
  padding: 0
  margin: 0

h1, h2, h3, h4, h5
  color: $blue

b, em, strong
  color: $sail

code
  color: $sea
  font-family: 'monaco', 'consolas', monospace
  background-color: lighten($sail, 80%)
  border-radius: 3px

body
  font-family: 'Nunito', sans-serif

.CodeMirror
  font-size: 14px
  height: auto !important
  border-radius: 3px
  flex-basis: 0
  flex-grow: 1

.container
  width: 1024px
  margin: 0 auto

.row
  display: flex
  align-items: flex-start
  margin-bottom: 48px

.row > *:nth-child(1)
  padding-right: 32px
  width: 420px

nav.tutorial
  display: flex
  flex-wrap: wrap
  justify-content: center
  align-items: center

  padding: 8px 0

  background-color: $sunlit

  & > a
    text-decoration: none
    margin-left: 16px

    &:first-child
      margin-left: 0
